{
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/next",
    "plugin:import/typescript",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:storybook/recommended"
  ],
  "ignorePatterns": [
    "*.d.ts"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ],
    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      "never",
      {
        "ignorePackages": true,
        "pattern": {
          "svg": "ignorePackages"
        }
      }
    ],
    "import/no-named-as-default": "off",
    "import/prefer-default-export": "off",
    "import/max-dependencies": [
      1,
      {
        "max": 40
      }
    ],
    "import/order": [
      "error",
      {
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin"
          },
          {
            "pattern": "next",
            "group": "builtin"
          },
          {
            "pattern": "next/**",
            "group": "builtin"
          },
          {
            "pattern": "@components/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@utils/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@services/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@axios/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@contexts/**",
            "group": "internal",
            "position": "after"
          }
        ],
        "groups": [
          "builtin",
          "internal"
        ],
        "pathGroupsExcludedImportTypes": [
          "react",
          "next"
        ],
        "newlines-between": "always"
      }
    ]
  }
}
